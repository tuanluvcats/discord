@model moi.Models.SanPham
@using moi.Models
@{
    ViewBag.Title = Model.TenSP + " - Jollibee Việt Nam";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    var relatedProducts = ViewBag.RelatedProducts as List<SanPham>;
}

<div class="container py-5">
    <!-- BREADCRUMB -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index","Home")#@Model.LoaiSanPham.TenLoai">
                    @Model.LoaiSanPham.TenLoai
                </a>
            </li>
            <li class="breadcrumb-item active">@Model.TenSP</li>
        </ol>
    </nav>

    <div class="row g-5">
        <!-- HÌNH ẢNH -->
        <div class="col-lg-5">
            <img src="~/Content/HinhAnhSP/@Model.Anh"
                 class="img-fluid rounded shadow-lg"
                 alt="@Model.TenSP"
                 onerror="this.src='/Content/HinhAnhSP/default.jpg'"
                 style="max-height: 450px; object-fit: cover;">
        </div>

        <!-- THÔNG TIN -->
        <div class="col-lg-7">
            <h1 class="display-6 fw-bold text-danger mb-3">@Model.TenSP</h1>
            <p class="text-muted fs-5 mb-3">
                <i class="fas fa-utensils me-2"></i> @Model.LoaiSanPham.TenLoai
            </p>
            <h2 class="text-danger fw-bold mb-4">@String.Format("{0:N0}", Model.Gia)đ</h2>

            @if (!string.IsNullOrEmpty(Model.MoTa))
            {
                <div class="mb-4">
                    <h5 class="fw-bold text-dark">Mô tả:</h5>
                    <p class="text-muted">@Model.MoTa</p>
                </div>
            }

            <div class="d-flex gap-3 align-items-center">
                <button class="btn btn-danger btn-lg px-5 add-to-cart" data-id="@Model.MaSP">
                    <i class="fas fa-cart-plus me-2"></i> Thêm vào giỏ
                </button>
                <a href="@Url.Action("Index", "Cart")" class="btn btn-outline-danger btn-lg">
                    <i class="fas fa-shopping-cart me-2"></i> Xem giỏ hàng
                </a>
            </div>
        </div>
    </div>

    <!-- SẢN PHẨM LIÊN QUAN -->
    @if (relatedProducts != null && relatedProducts.Any())
    {
        <div class="mt-5 pt-5 border-top">
            <h3 class="text-center text-danger fw-bold mb-4">
                <i class="fas fa-thumbs-up me-2"></i> SẢN PHẨM CÙNG LOẠI
            </h3>
            <div class="row g-4">
                @foreach (var item in relatedProducts)
                {
                    <div class="col-md-3">
                        <div class="product-card h-100">
                            <a href="@Url.Action("ChiTietSanPham", "Home", new { id = item.MaSP })" class="text-decoration-none">
                                <img src="~/Content/HinhAnhSP/@item.Anh"
                                     class="img-fluid rounded-top"
                                     alt="@item.TenSP"
                                     onerror="this.src='/Content/HinhAnhSP/default.jpg'"
                                     style="height: 180px; object-fit: cover;">
                                <div class="p-3">
                                    <h6 class="text-dark fw-bold text-truncate">@item.TenSP</h6>
                                    <p class="text-danger fw-bold mb-2">@String.Format("{0:N0}", item.Gia)đ</p>
                                </div>
                            </a>
                            <div class="px-3 pb-3">
                                <button class="btn btn-danger btn-sm w-100 add-to-cart" data-id="@item.MaSP">
                                    <i class="fas fa-cart-plus"></i> Thêm
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('.add-to-cart').on('click', function () {
                const maSP = $(this).data('id');
                const $btn = $(this);

                @if (Session["MaTK"] == null)
                {
                    <text>
                    alert('Vui lòng đăng nhập để thêm vào giỏ hàng!');
                    window.location.href = '@Url.Action("Login", "Account")';
                    return;
                    </text>
                }

                $.post('@Url.Action("ThemVaoGio", "Cart")', { maSP: maSP }, function (res) {
                    if (res.success) {
                        alert(res.message);
                        updateCartBadge();
                        $btn.html('<i class="fas fa-check"></i> Đã thêm').prop('disabled', true);
                        setTimeout(() => $btn.html('<i class="fas fa-cart-plus"></i> Thêm').prop('disabled', false), 1500);
                    } else {
                        alert(res.message);
                    }
                });
            });

            function updateCartBadge() {
                $.get('@Url.Action("Index", "Cart")', function (data) {
                    const count = $(data).find('tr').length - 1;
                    $('#cartBadge').text(count > 0 ? count : '0');
                });
            }
        });
    </script>
}