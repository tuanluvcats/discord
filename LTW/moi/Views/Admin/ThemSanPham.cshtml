@model moi.Models.SanPham
@{
    ViewBag.Title = "Thêm sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4><i class="fas fa-plus"></i> Thêm sản phẩm mới</h4>
        </div>
        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            @using (Html.BeginForm("ThemSanPham", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label class="form-label">Tên sản phẩm <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(m => m.TenSP, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.TenSP, "", new { @class = "text-danger" })
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Giá (VNĐ) <span class="text-danger">*</span></label>
                                @Html.TextBoxFor(m => m.Gia, new { @class = "form-control", type = "number", min = "0", required = "required" })
                                @Html.ValidationMessageFor(m => m.Gia, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Số lượng <span class="text-danger">*</span></label>
                                @Html.TextBoxFor(m => m.SoLuong, new { @class = "form-control", type = "number", min = "0", value = "0" })
                                @Html.ValidationMessageFor(m => m.SoLuong, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Loại sản phẩm</label>
                            @Html.DropDownListFor(m => m.MaLoai, (SelectList)ViewBag.ListLoai, "-- Chọn loại --", new { @class = "form-select" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            @Html.TextAreaFor(m => m.MoTa, new { @class = "form-control", rows = "4" })
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label">Hình ảnh</label>
                            <input type="file" name="Anh" id="fileAnh" class="form-control" accept="image/*" onchange="previewImage(this)" />
                            <small class="text-muted">Chấp nhận: jpg, jpeg, png, gif (Max: 5MB)</small>
                            @Html.ValidationMessage("Anh", new { @class = "text-danger" })
                        </div>

                        <div class="text-center">
                            <img id="imgPreview" src="~/Content/HinhAnhSP/default.jpg" class="img-thumbnail" style="max-width: 250px;" alt="Preview" />
                        </div>
                    </div>
                </div>

                <hr />
                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("SanPham", "Admin")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Lưu sản phẩm
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    <script>
        function previewImage(input) {

            console.log("Test");

            if (input.files && input.files[0]) {
                console.log("Test1");

                const file = input.files[0];

                if (file.size > 5 * 1024 * 1024) {
                    console.log("Test2");

                    alert("Dung lượng ảnh vượt quá 5MB!");
                    input.value = "";
                    return;
                }

                const validTypes = ["image/jpeg", "image/png", "image/gif"];
                if (!validTypes.includes(file.type)) {
                    console.log("Test3");

                    alert("Chỉ chấp nhận ảnh jpg, jpeg, png, gif!");
                    input.value = "";
                    return;
                }

                const reader = new FileReader();
                reader.onload = function (e) {
                    console.log("Test4");
                    console.log(file.type);
                    document.getElementById("imgPreview").src = e.target.result;
                };
                
                reader.readAsDataURL(file);
                console.log("Test5");

            }
        }
    </script>
}