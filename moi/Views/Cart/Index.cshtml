@model List<moi.Models.GioHangChiTiet>
@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    ViewBag.Title = "Giỏ hàng";
    decimal tongTien = 0;
}

<div class="container py-5">
    <h2 class="text-danger fw-bold mb-4">
        <i class="fas fa-shopping-cart"></i> Giỏ hàng của bạn
    </h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="fas fa-cart-plus fa-3x mb-3"></i>
            <h4>Giỏ hàng trống</h4>
            <p>Hãy thêm sản phẩm vào giỏ hàng để tiếp tục mua sắm!</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-danger mt-3">
                <i class="fas fa-arrow-left"></i> Tiếp tục mua sắm
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th width="100">Hình ảnh</th>
                                    <th>Sản phẩm</th>
                                    <th width="150">Đơn giá</th>
                                    <th width="150">Số lượng</th>
                                    <th width="150">Thành tiền</th>
                                    <th width="80"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    var thanhTien = (item.SanPham.Gia ?? 0) * (item.SoLuong ?? 0);
                                    tongTien += thanhTien;
                                    <tr>
                                        <td>
                                            <img src="~/Content/HinhAnhSP/@item.SanPham.Anh"
                                                 class="img-thumbnail"
                                                 style="width:80px; height:80px; object-fit:cover;"
                                                 alt="@item.SanPham.TenSP" />
                                        </td>
                                        <td>
                                            <strong>@item.SanPham.TenSP</strong><br />
                                            <small class="text-muted">@item.SanPham.MoTa</small>
                                        </td>
                                        <td class="text-danger fw-bold">
                                            @String.Format("{0:N0}", item.SanPham.Gia) đ
                                        </td>
                                        <td>
                                            <div class="input-group" style="max-width:120px;">
                                                <button class="btn btn-outline-secondary btn-sm btn-decrease"
                                                        data-id="@item.MaGHCT">
                                                    -
                                                </button>
                                                <input type="number"
                                                       class="form-control form-control-sm text-center quantity-input"
                                                       value="@item.SoLuong"
                                                       min="1"
                                                       data-id="@item.MaGHCT" />
                                                <button class="btn btn-outline-secondary btn-sm btn-increase"
                                                        data-id="@item.MaGHCT">
                                                    +
                                                </button>
                                            </div>
                                        </td>
                                        <td class="text-danger fw-bold">
                                            @String.Format("{0:N0}", thanhTien) đ
                                        </td>
                                        <td>
                                            <button class="btn btn-danger btn-sm btn-remove"
                                                    data-id="@item.MaGHCT"
                                                    title="Xóa">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0"><i class="fas fa-receipt"></i> Tổng đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span>Tạm tính:</span>
                            <strong class="text-danger">@String.Format("{0:N0}", tongTien) đ</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Phí vận chuyển:</span>
                            <strong>Miễn phí</strong>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between mb-4">
                            <h5>Tổng cộng:</h5>
                            <h5 class="text-danger">@String.Format("{0:N0}", tongTien) đ</h5>
                        </div>
                        <a href="@Url.Action("ThanhToan", "Cart")" class="btn btn-danger w-100 btn-lg">
                            <i class="fas fa-credit-card"></i> Thanh toán
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary w-100 mt-2">
                            <i class="fas fa-arrow-left"></i> Tiếp tục mua sắm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section scripts {
    <script>
        $('.btn-decrease').click(function () {
            var input = $(this).siblings('.quantity-input');
            var val = parseInt(input.val());
            if (val > 1) {
                input.val(val - 1);
                updateQuantity(input.data('id'), val - 1);
            }
        });

        $('.btn-increase').click(function () {
            var input = $(this).siblings('.quantity-input');
            var val = parseInt(input.val());
            input.val(val + 1);
            updateQuantity(input.data('id'), val + 1);
        });

        $('.quantity-input').change(function () {
            var val = parseInt($(this).val());
            if (val < 1) val = 1;
            $(this).val(val);
            updateQuantity($(this).data('id'), val);
        });

        $('.btn-remove').click(function () {
            if (confirm('Bạn có chắc muốn xóa sản phẩm này?')) {
                var id = $(this).data('id');
                $.post('@Url.Action("XoaKhoiGio", "Cart")', { maGHCT: id })
                    .done(function (res) {
                        if (res.success) {
                            location.reload();
                        }
                    });
            }
        });

        function updateQuantity(id, soLuong) {
            $.post('@Url.Action("CapNhatSoLuong", "Cart")', { maGHCT: id, soLuong: soLuong })
                .done(function (res) {
                    if (res.success) {
                        location.reload();
                    }
                });
        }
    </script>
}