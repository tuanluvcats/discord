@model List<moi.Models.GioHangChiTiet>
@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    ViewBag.Title = "Thanh toán";
    decimal tongTien = Model.Sum(x => (x.SanPham.Gia ?? 0) * (x.SoLuong ?? 0));
}

<div class="container py-5">
    <h2 class="text-danger fw-bold mb-4">
        <i class="fas fa-credit-card"></i> Thanh toán đơn hàng
    </h2>

    <div class="row">
        <!-- Thông tin đơn hàng -->
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-box"></i> Sản phẩm trong đơn hàng</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td width="80">
                                        <img src="~/Content/HinhAnhSP/@item.SanPham.Anh"
                                             class="img-thumbnail"
                                             style="width:60px; height:60px; object-fit:cover;" />
                                    </td>
                                    <td>
                                        <strong>@item.SanPham.TenSP</strong><br />
                                        <small class="text-muted">x @item.SoLuong</small>
                                    </td>
                                    <td class="text-end text-danger fw-bold">
                                        @String.Format("{0:N0}", (item.SanPham.Gia ?? 0) * (item.SoLuong ?? 0)) đ
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Phương thức thanh toán -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-money-bill-wave"></i> Phương thức thanh toán</h5>
                </div>
                <div class="card-body">
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="phuongThuc" id="cod" value="Tiền mặt" checked>
                        <label class="form-check-label" for="cod">
                            <strong>Thanh toán khi nhận hàng (COD)</strong><br />
                            <small class="text-muted">Thanh toán bằng tiền mặt khi nhận hàng</small>
                        </label>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="phuongThuc" id="bank" value="Chuyển khoản">
                        <label class="form-check-label" for="bank">
                            <strong>Chuyển khoản ngân hàng</strong><br />
                            <small class="text-muted">Chuyển khoản qua ngân hàng</small>
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="phuongThuc" id="momo" value="Ví MoMo">
                        <label class="form-check-label" for="momo">
                            <strong>Ví điện tử MoMo</strong><br />
                            <small class="text-muted">Thanh toán qua ví MoMo</small>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tổng đơn hàng -->
        <div class="col-lg-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-receipt"></i> Chi tiết thanh toán</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tạm tính:</span>
                        <strong>@String.Format("{0:N0}", tongTien) đ</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Phí vận chuyển:</span>
                        <strong class="text-success">Miễn phí</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Giảm giá:</span>
                        <strong>0 đ</strong>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between mb-4">
                        <h5>Tổng cộng:</h5>
                        <h5 class="text-danger">@String.Format("{0:N0}", tongTien) đ</h5>
                    </div>

                    <button class="btn btn-danger w-100 btn-lg mb-2" id="btnXacNhan">
                        <i class="fas fa-check-circle"></i> Xác nhận đặt hàng
                    </button>
                    <a href="@Url.Action("Index", "Cart")" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-arrow-left"></i> Quay lại giỏ hàng
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $('#btnXacNhan').click(function () {
            var phuongThuc = $('input[name="phuongThuc"]:checked').val();

            if (confirm('Xác nhận đặt hàng với phương thức thanh toán: ' + phuongThuc + '?')) {
                $(this).prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Đang xử lý...');

                $.post('@Url.Action("XacNhanThanhToan", "Cart")', { phuongThuc: phuongThuc })
                    .done(function (res) {
                        if (res.success) {
                            alert('Đặt hàng thành công! Cảm ơn bạn đã mua hàng.');
                            window.location.href = '@Url.Action("Index", "Home")';
                        } else {
                            alert('Lỗi: ' + res.message);
                            $('#btnXacNhan').prop('disabled', false).html('<i class="fas fa-check-circle"></i> Xác nhận đặt hàng');
                        }
                    })
                    .fail(function () {
                        alert('Lỗi kết nối server!');
                        $('#btnXacNhan').prop('disabled', false).html('<i class="fas fa-check-circle"></i> Xác nhận đặt hàng');
                    });
            }
        });
    </script>
}