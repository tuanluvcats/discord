<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Jollibee Việt Nam</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/site.css" />
    <link rel="icon" href="~/images/logo.png" type="image/png" />
    <style>
        .header {
            position: sticky;
            top: 0;
            z-index: 1000;
            background-color: white;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

            .header .top-bar {
                background-color: #dc3545;
            }

            .header .navbar {
                background-color: white !important;
            }
    </style>
</head>
<body>
    <!-- HEADER -->
    <header class="header">
        <div class="top-bar bg-danger text-white py-2">
            <div class="container d-flex justify-content-between align-items-center">
                <div class="lang">
                    <a href="#" class="text-white text-decoration-none">🇻🇳 VN</a> |
                    <a href="#" class="text-white text-decoration-none">🇬🇧 EN</a>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <div class="location text-white">
                        <i class="fa fa-map-marker-alt"></i> Hồ Chí Minh
                    </div>
                    <div class="account">
                        @if (Session["Role"]?.ToString() == "KhachHang")
                        {
                            <span class="text-white">
                                <i class="fas fa-user-circle"></i>
                                <strong>@Session["UserName"]</strong>
                            </span>
                            <span class="text-white mx-2">|</span>
                            <a href="@Url.Action("Logout","Account")" class="text-white text-decoration-none">
                                <i class="fas fa-sign-out-alt"></i> Đăng xuất
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login","Account")" class="text-white text-decoration-none">
                                <i class="fas fa-sign-in-alt"></i> Đăng nhập
                            </a>
                            <span class="text-white mx-2">|</span>
                            <a href="@Url.Action("Register","Account")" class="text-white text-decoration-none">
                                <i class="fas fa-user-plus"></i> Đăng ký
                            </a>
                        }
                    </div>

                    @if (Session["MaTK"] != null)
                    {
                        <a href="@Url.Action("Index", "Cart")" class="btn btn-light btn-sm position-relative">
                            <i class="fas fa-shopping-cart"></i> Giỏ hàng
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning text-dark" id="cartBadge">
                                0
                            </span>
                        </a>
                    }

                    <div class="hotline text-white">
                        <i class="fas fa-phone-alt"></i> <strong>1900-1533</strong>
                    </div>
                </div>
            </div>
        </div>

        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index","Home")">
                    <img src="~/Content/HinhAnhLogo/logo2.jpg" alt="Jollibee Logo" height="75" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active text-danger fw-bold" : "")"
                               href="@Url.Action("Index","Home")">
                                <i class="fas fa-home"></i> TRANG CHỦ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-info-circle"></i> VỀ JOLLIBEE
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-utensils"></i> THỰC ĐƠN
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-gift"></i> KHUYẾN MÃI
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-store"></i> CỬA HÀNG
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-phone"></i> LIÊN HỆ
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- NỘI DUNG CHÍNH -->
    <main class="content">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="footer bg-r text-white py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img src="~/Content/HinhAnhLogo/jollibee1.png" alt="Logo" height="60" class="mb-3" />
                    <p><strong>CÔNG TY TNHH JOLLIBEE VIỆT NAM</strong></p>
                    <p>
                        <i class="fas fa-map-marker-alt"></i> Tầng 26, Tòa nhà CII Tower, số 152 Điện Biên Phủ,<br />
                        Phường Thạnh Mỹ Tây, TP.HCM
                    </p>
                    <p><i class="fas fa-phone"></i> (028) 39309168</p>
                    <p><i class="fas fa-headset"></i> Tổng đài: 1900-1533</p>
                    <p>Mã số thuế: 0303883266</p>
                </div>
                <div class="col-md-4">
                    <h5><strong>Liên hệ</strong></h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none">Chính sách và quy định chung</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Chính sách thanh toán</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Chính sách bảo mật</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Thông tin vận chuyển</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Hướng dẫn đặt hàng</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5><strong>KẾT NỐI VỚI CHÚNG TÔI</strong></h5>
                    <p>
                        <a href="#" class="text-white me-3 fs-3"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-white me-3 fs-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-white fs-3"><i class="fab fa-youtube"></i></a>
                    </p>
                    <img src="~/Content/HinhAnhLogo/dathongbao.png" alt="Đã thông báo" class="img-fluid mb-3" style="max-width:150px;" />
                    <p><strong>TẢI ỨNG DỤNG</strong></p>
                    <div class="d-flex gap-2">
                        <img src="~/Content/HinhAnhLogo/ggplay.png" alt="Google Play" class="img-fluid" style="max-width:120px;" />
                        <img src="~/Content/HinhAnhLogo/appstore.png" alt="App Store" class="img-fluid" style="max-width:120px;" />
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>