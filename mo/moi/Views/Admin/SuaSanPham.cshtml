@model moi.Models.SanPham
@{
    ViewBag.Title = "Sửa sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa sản phẩm</h2>

@using (Html.BeginForm("SuaSanPham", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.MaSP)

    <div class="container">
        <div class="row g-3">

            <div class="col-md-6">
                <label>Tên sản phẩm <span class="text-danger">*</span></label>
                @Html.TextBoxFor(m => m.TenSP, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(m => m.TenSP, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-6">
                <label>Giá <span class="text-danger">*</span></label>
                @Html.TextBoxFor(m => m.Gia, new { @class = "form-control", type = "number", step = "0.01", required = "required" })
                @Html.ValidationMessageFor(m => m.Gia, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-6">
                <label>Số lượng</label>
                @Html.TextBoxFor(m => m.SoLuong, new { @class = "form-control", type = "number", min = "0" })
            </div>

            <div class="col-md-6">
                <label>Loại sản phẩm <span class="text-danger">*</span></label>
                @Html.DropDownListFor(m => m.MaLoai, ViewBag.ListLoai as SelectList, "-- Chọn loại --", new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(m => m.MaLoai, "", new { @class = "text-danger" })
            </div>

            <div class="col-12">
                <label>Hình ảnh hiện tại</label><br />
                @if (!string.IsNullOrEmpty(Model.Anh))
                {
                    <img src="~/Content/HinhAnhSP/@Model.Anh" width="150" class="img-thumbnail mb-2" />
                }
                else
                {
                    <p class="text-muted">Chưa có ảnh</p>
                }
                <input type="file" name="Anh" class="form-control" accept="image/*" />
                <small class="text-muted">Chỉ cập nhật nếu chọn ảnh mới</small>
            </div>

            <div class="col-12">
                <label>Mô tả</label>
                @Html.TextAreaFor(m => m.MoTa, new { @class = "form-control", rows = "4" })
            </div>

            <div class="col-12 mt-3">
                <button type="submit" class="btn btn-warning me-2">
                    Cập nhật
                </button>
                <a href="@Url.Action("SanPham")" class="btn btn-secondary">
                    Quay lại
                </a>
            </div>
        </div>
    </div>
}